{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "indent": ["warn", 4],
      "semi": [2, "never"],
      "no-unexpected-multiline": 2,
      "react/jsx-indent": ["warn", 4],
      "space-before-function-paren": "off",
      "react/prefer-stateless-function": "warn",
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "linebreak-style": "off",
      "global-require": "off",
      "arrow-body-style": "off"
    }
  }